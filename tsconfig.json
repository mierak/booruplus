{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"paths": {
			"store/*": ["store/*"],
			"store/": ["store/index"],
			"store": ["store/index"],
			"db/*": ["db/*"],
			"db": ["db/index"],
			"service/*": ["service/*"],
			"types/*": ["types/*"],
			"util/*": ["util/*"],
			"hooks/*": ["src/hooks/*"],
			"*": ["node_modules/*"]
		},
		"strict": true,
		"target": "ES2019"
	},
	"include": [
		"src/**/*",
		"types/**/*",
		"store/**/*",
		"service/**/*",
		"util/**/*",
		"db/**/*",
		"electron/preload.js",
		"window.d.ts",
		"service/apiService.ts",
		"electron/index.ts",
		"resizeObserver.d.ts"
	]
}
