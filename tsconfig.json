{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"paths": {
			"@store/*": ["src/store/*"],
			"@store/": ["src/store/index"],
			"@store": ["src/store/index"],
			"@db/*": ["src/db/*"],
			"@db": ["src/db/index"],
			"@service/*": ["src/service/*"],
			"@appTypes/*": ["src/types/*"],
			"@util/*": ["src/util/*"],
			"@hooks/*": ["src/hooks/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@errors/*": ["src/errors/*"],
			"*": ["node_modules/*"]
		},
		"strict": true,
		"target": "ES2019"
	},
	"include": [
		"src/**/*",
		"src/types/**/***/*",
		"src/store/**/*",
		"src/service/**/*",
		"src/util/**/*",
		"src/db/db/**/*",
		"window.d.ts",
		"src/service/apiService.ts",
		"electron/**/*.ts",
		"resizeObserver.d.ts",
		"test/**/*"
	]
}
