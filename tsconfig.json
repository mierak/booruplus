{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"paths": {
			"store/*": ["src/store/*"],
			"store/": ["src/store/index"],
			"store": ["src/store/index"],
			"db/*": ["src/db/db/*"],
			"db": ["src/db/db/index"],
			"service/*": ["src/service/*"],
			"types/*": ["src/types/*"],
			"util/*": ["src/util/*"],
			"hooks/*": ["src/hooks/*"],
			"*": ["node_modules/*"]
		},
		"strict": true,
		"target": "ES2019"
	},
	"include": [
		"src/**/*",
		"src/types/**/***/*",
		"src/store/**/*",
		"src/service/**/*",
		"src/util/**/*",
		"src/db/db/**/*",
		"electron/preload.js",
		"window.d.ts",
		"src/service/apiService.ts",
		"electron/index.ts",
		"resizeObserver.d.ts",
		"test/**/*"
	]
}
