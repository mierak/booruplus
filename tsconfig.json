{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"paths": {
			"*": ["node_modules/*"]
		},
		"strict": true
	},
	"include": [
		"src/**/*",
		"types/**/*",
		"store/**/*",
		"service/**/*",
		"util/**/*",
		"db/**/*",
		"electron/preload.js",
		"window.d.ts",
		"service/apiService.ts",
		"electron/index.ts"
	]
}
